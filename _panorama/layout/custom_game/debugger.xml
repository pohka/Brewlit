<root>
  <styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/debugger.css" />
  </styles>
  <scripts>
		<include src="file://{resources}/scripts/custom_game/debugger.js" />
  </scripts>
	
	<Panel class="debugger-con">
		<Panel class="debugger-title">
			<Label text="Brewlit Debugger"/>
		</Panel>
		<Panel class="debugger-menu">
			<Button id="filter-btn" onactivate="filterBy()">
				<Label text="Filter: All" />
			</Button>
			<Button onactivate="showAPI()">
				<Label text="API" />
			</Button>
			<Button onactivate="clearLogs()">
				<Label text="Clear" />
			</Button>
		</Panel>
		<Panel class="debugger-msg-con" id="debugger-msgs">
			<Panel class="debugger-msg debug-default">
				<Label text="Default example 1" />
			</Panel>
			<Panel class="debugger-msg debug-error">
				<Label text="Error example" />
			</Panel>
			<Panel class="debugger-msg debug-default">
				<Label text="Default example 2" />
			</Panel>
			<Panel class="debugger-msg debug-event">
				<Label text="Event example" />
			</Panel>
		</Panel>
	</Panel>
 </root>